root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.{c,cpp,h,hpp,inc,inl}]
indent_size = 4
indent_style = space

[*.json]
indent_size = 2
indent_style = tab

[*.{xml,qrc}]
indent_size = 2
indent_style = tab

[CmakeLists.txt]
indent_size = 4
indent_style = space

[*.cmake]
indent_size = 4
indent_style = space
